@model TestBlog.Models.User

@{
    ViewData["Title"] = "Профиль";
}

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-body text-center">
                <div class="mb-3">
                    <i class="fas fa-user-circle fa-5x text-primary"></i>
                </div>
                <h4>@Model.Username</h4>
                <p class="text-muted">@Model.Email</p>

                @if (User.IsInRole("Admin"))
                {
                    <span class="badge badge-primary">Администратор</span>
                }
                else if (User.IsInRole("Moderator"))
                {
                    <span class="badge badge-success">Модератор</span>
                }
                else
                {
                    <span class="badge badge-secondary">Пользователь</span>
                }

                <hr>

                <div class="row">
                    <div class="col-6">
                        <h5>0</h5>
                        <small class="text-muted">Статей</small>
                    </div>
                    <div class="col-6">
                        <h5>0</h5>
                        <small class="text-muted">Комментариев</small>
                    </div>
                </div>

                <hr>

                <p class="text-muted mb-1">
                    <i class="fas fa-calendar-alt mr-2"></i>Зарегистрирован: @Model.RegistrationDate.ToShortDateString()
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-newspaper mr-2 text-primary"></i>Мои статьи</h5>
            </div>
            <div class="card-body">
                <p class="text-muted text-center">У вас пока нет статей</p>
                <div class="text-center">
                    <a asp-controller="Article" asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-pen mr-2"></i>Написать первую статью
                    </a>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-white">
                <h5 class="mb-0"><i class="fas fa-history mr-2 text-primary"></i>Последние действия</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled">
                    <li class="mb-2">
                        <i class="fas fa-circle text-primary mr-2 small"></i>
                        Вы зарегистрировались @Model.RegistrationDate.ToShortDateString()
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>