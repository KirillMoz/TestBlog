@model IEnumerable<TestBlog.Models.Article>

@{
    ViewData["Title"] = "Мои статьи";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="fas fa-newspaper text-primary mr-2"></i>Мои статьи</h1>
        </div>
        <div class="col text-right">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Новая статья
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-pen-fancy fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">У вас пока нет статей</h3>
            <p class="lead text-muted mb-4">Напишите свою первую статью и поделитесь мыслями с миром</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="fas fa-pen mr-2"></i>Написать статью
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    <a asp-action="Details" asp-route-id="@article.Id" class="text-decoration-none">
                                        @article.Title
                                    </a>
                                </h5>
                                @if (!article.IsPublished)
                                {
                                    <span class="badge badge-warning">Черновик</span>
                                }
                                else
                                {
                                    <span class="badge badge-success">Опубликовано</span>
                                }
                            </div>

                            <p class="card-text text-muted small">
                                <i class="fas fa-calendar-alt mr-1"></i> @article.CreatedDate.ToShortDateString()
                                <span class="mx-2">|</span>
                                <i class="fas fa-eye mr-1"></i> @article.ViewCount просмотров
                            </p>

                            <p class="card-text">
                                @(article.Content.Length > 150 ? article.Content.Substring(0, 150) + "..." : article.Content)
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100">
                                <a asp-action="Details" asp-route-id="@article.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye"></i> Просмотр
                                </a>
                                <a asp-action="Edit" asp-route-id="@article.Id" class="btn btn-outline-warning btn-sm">
                                    <i class="fas fa-edit"></i> Редактировать
                                </a>
                                <a asp-action="Delete" asp-route-id="@article.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="fas fa-trash"></i> Удалить
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>