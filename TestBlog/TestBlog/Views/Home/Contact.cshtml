@{
    ViewData["Title"] = "Контакты";
}

<div class="row">
    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h4 class="mb-4"><i class="fas fa-envelope mr-2 text-primary"></i>Связаться с нами</h4>

                <form asp-action="Contact" method="post">
                    <div class="form-group">
                        <label>Ваше имя</label>
                        <input type="text" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label>Тема</label>
                        <input type="text" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label>Сообщение</label>
                        <textarea class="form-control" rows="5" required></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane mr-2"></i>Отправить
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-6 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <h4 class="mb-4"><i class="fas fa-info-circle mr-2 text-primary"></i>Контактная информация</h4>

                <div class="mb-4">
                    <h6><i class="fas fa-map-marker-alt text-primary mr-2"></i>Адрес:</h6>
                    <p class="text-muted">г. Москва, ул. Программная, д. 1, офис 101</p>
                </div>

                <div class="mb-4">
                    <h6><i class="fas fa-phone text-primary mr-2"></i>Телефон:</h6>
                    <p class="text-muted">+7 (123) 456-78-90</p>
                </div>

                <div class="mb-4">
                    <h6><i class="fas fa-envelope text-primary mr-2"></i>Email:</h6>
                    <p class="text-muted">info@testblog.ru</p>
                </div>

                <div class="mb-4">
                    <h6><i class="fas fa-clock text-primary mr-2"></i>Режим работы:</h6>
                    <p class="text-muted">Понедельник - Пятница: 9:00 - 18:00</p>
                </div>

                <h6 class="mt-4">Мы в социальных сетях:</h6>
                <div class="mt-3">
                    <a href="#" class="btn btn-outline-primary btn-sm mr-2">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="btn btn-outline-info btn-sm mr-2">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#" class="btn btn-outline-danger btn-sm mr-2">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a href="#" class="btn btn-outline-primary btn-sm">
                        <i class="fab fa-telegram-plane"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <div class="card">
            <div class="card-body p-0">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2245.373871843073!2d37.6189!3d55.7512!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTXCsDQ1JzA0LjMiTiAzN8KwMzcnMDguMCJF!5e0!3m2!1sru!2sru!4v1234567890"
                        width="100%" height="400" style="border:0; border-radius: 15px;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</div>