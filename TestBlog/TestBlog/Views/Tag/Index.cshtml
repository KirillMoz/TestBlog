@using TestBlog.ViewModels
@model IEnumerable<TagViewModel>

@{
    ViewData["Title"] = "Теги";
}

<div class="container">
    <h1 class="mb-4"><i class="fas fa-tags text-primary mr-2"></i>Все теги</h1>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-4">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus mr-2"></i>Создать тег
            </a>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-tags fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">Пока нет тегов</h3>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var tag in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-tag text-primary mr-2"></i>
                                <a asp-action="Details" asp-route-id="@tag.Id" class="text-decoration-none">
                                    @tag.Name
                                </a>
                            </h5>
                            <p class="card-text text-muted">
                                @tag.Description
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-newspaper mr-1"></i> Статей: @tag.ArticlesCount
                                </small>
                            </p>
                        </div>
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="card-footer bg-transparent">
                                <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Ред.
                                </a>
                                <form asp-action="Delete" asp-route-id="@tag.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Удалить тег?')">
                                        <i class="fas fa-trash"></i> Удал.
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>